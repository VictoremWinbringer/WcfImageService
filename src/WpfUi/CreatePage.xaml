<Page x:Class="WpfUi.CreatePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfUi"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="CreatePage" WindowTitle="CreatePage">

    <Grid>
      <StackPanel>
            <Label>Айди</Label>
          <TextBlock Name="Id"></TextBlock>
            <Label >Название</Label>
          <TextBox Name="Title"></TextBox>
            <Label>Описание</Label>
          <TextBox Name="Description"></TextBox>
            <Button Name="LoadButton" Click="LoadButton_OnClick">Выбрать файл</Button>
            <Button Name="CreateButton" Click="SaveButton_OnClick">Создать</Button>
            <Button Name="UpdateButton" Click="UpdateButton_OnClick">Изменить</Button>
            <Button Name="DeleteButton" Click="DeleteButton_OnClick">Удалить</Button>
            <Image MaxHeight="300" MaxWidth="300" Name="Data" Stretch="Uniform" StretchDirection="DownOnly"></Image>
      </StackPanel>  
    </Grid>
</Page>
